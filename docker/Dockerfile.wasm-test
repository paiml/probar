# PROBAR-SPEC-014: Docker WASM Testing Infrastructure
# Multi-stage build for cross-browser WASM testing
#
# Supports: Chrome, Firefox, WebKit
# Features: COOP/COEP headers, SharedArrayBuffer, CDP protocol
#
# Build: docker build -f docker/Dockerfile.wasm-test -t probar-wasm-test .
# Usage: docker run -p 9222:9222 probar-wasm-test chrome

ARG RUST_VERSION=1.83
ARG DEBIAN_VERSION=bookworm

# =============================================================================
# Stage 1: Rust Builder
# =============================================================================
FROM rust:${RUST_VERSION}-slim-${DEBIAN_VERSION} AS builder

WORKDIR /build

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    pkg-config \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy workspace files
COPY Cargo.toml Cargo.lock ./
COPY crates/ crates/

# Build probar CLI with browser and docker features
RUN cargo build --release -p probar-cli --features browser

# =============================================================================
# Stage 2: Chrome Runtime
# =============================================================================
FROM debian:${DEBIAN_VERSION}-slim AS chrome

# Install Chrome and dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    wget \
    gnupg \
    ca-certificates \
    fonts-liberation \
    libasound2 \
    libatk-bridge2.0-0 \
    libatk1.0-0 \
    libatspi2.0-0 \
    libcairo2 \
    libcups2 \
    libdbus-1-3 \
    libdrm2 \
    libexpat1 \
    libgbm1 \
    libglib2.0-0 \
    libgtk-3-0 \
    libnspr4 \
    libnss3 \
    libpango-1.0-0 \
    libx11-6 \
    libxcb1 \
    libxcomposite1 \
    libxdamage1 \
    libxext6 \
    libxfixes3 \
    libxkbcommon0 \
    libxrandr2 \
    xdg-utils \
    && rm -rf /var/lib/apt/lists/*

# Install Chrome from official repo
RUN wget -q -O - https://dl.google.com/linux/linux_signing_key.pub | gpg --dearmor > /usr/share/keyrings/google-chrome.gpg \
    && echo "deb [arch=amd64 signed-by=/usr/share/keyrings/google-chrome.gpg] http://dl.google.com/linux/chrome/deb/ stable main" > /etc/apt/sources.list.d/google-chrome.list \
    && apt-get update \
    && apt-get install -y --no-install-recommends google-chrome-stable \
    && rm -rf /var/lib/apt/lists/*

# Copy probar CLI
COPY --from=builder /build/target/release/probar /usr/local/bin/

# Create non-root user
RUN useradd -m -s /bin/bash probar

# Setup working directory
WORKDIR /app
RUN chown -R probar:probar /app

USER probar

# Environment variables
ENV PROBAR_BROWSER=chrome
ENV PROBAR_CDP_PORT=9222
ENV PROBAR_COOP_COEP=true
ENV DISPLAY=:99

# Chrome launch flags for headless + CDP
ENV CHROME_FLAGS="--headless=new --disable-gpu --no-sandbox --disable-dev-shm-usage --remote-debugging-port=9222 --remote-debugging-address=0.0.0.0"

EXPOSE 9222

# Entrypoint: start Chrome with CDP and run tests
ENTRYPOINT ["/bin/bash", "-c", "google-chrome-stable $CHROME_FLAGS & sleep 2 && exec \"$@\"", "--"]
CMD ["probar", "--help"]

# =============================================================================
# Stage 3: Firefox Runtime
# =============================================================================
FROM debian:${DEBIAN_VERSION}-slim AS firefox

# Install Firefox and dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    wget \
    ca-certificates \
    bzip2 \
    libgtk-3-0 \
    libdbus-glib-1-2 \
    libxt6 \
    libasound2 \
    libpci3 \
    libx11-xcb1 \
    && rm -rf /var/lib/apt/lists/*

# Install Firefox from official tarball (latest ESR)
RUN wget -q "https://download.mozilla.org/?product=firefox-esr-latest&os=linux64&lang=en-US" -O /tmp/firefox.tar.bz2 \
    && tar -xjf /tmp/firefox.tar.bz2 -C /opt/ \
    && ln -s /opt/firefox/firefox /usr/local/bin/firefox \
    && rm /tmp/firefox.tar.bz2

# Copy probar CLI
COPY --from=builder /build/target/release/probar /usr/local/bin/

# Create non-root user
RUN useradd -m -s /bin/bash probar

WORKDIR /app
RUN chown -R probar:probar /app

USER probar

# Environment variables
ENV PROBAR_BROWSER=firefox
ENV PROBAR_CDP_PORT=9223
ENV PROBAR_COOP_COEP=true
ENV DISPLAY=:99
ENV MOZ_HEADLESS=1

# Firefox headless with remote debugging
ENV FIREFOX_FLAGS="-headless --remote-debugging-port=9223"

EXPOSE 9223

ENTRYPOINT ["/bin/bash", "-c", "firefox $FIREFOX_FLAGS & sleep 2 && exec \"$@\"", "--"]
CMD ["probar", "--help"]

# =============================================================================
# Stage 4: WebKit Runtime (via playwright webkit)
# =============================================================================
FROM debian:${DEBIAN_VERSION}-slim AS webkit

# Install WebKit dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    wget \
    ca-certificates \
    libwpe-1.0-1 \
    libwpebackend-fdo-1.0-1 \
    libgstreamer1.0-0 \
    libgstreamer-plugins-base1.0-0 \
    gstreamer1.0-plugins-good \
    libenchant-2-2 \
    libsecret-1-0 \
    libhyphen0 \
    libmanette-0.2-0 \
    libflite1 \
    libgles2 \
    && rm -rf /var/lib/apt/lists/*

# Copy probar CLI
COPY --from=builder /build/target/release/probar /usr/local/bin/

# Create non-root user
RUN useradd -m -s /bin/bash probar

WORKDIR /app
RUN chown -R probar:probar /app

USER probar

# Environment variables
ENV PROBAR_BROWSER=webkit
ENV PROBAR_CDP_PORT=9224
ENV PROBAR_COOP_COEP=true
ENV DISPLAY=:99

EXPOSE 9224

# WebKit requires special handling - CDP via webkit driver
CMD ["probar", "--help"]

# =============================================================================
# Stage 5: All-in-One (for local development)
# =============================================================================
FROM debian:${DEBIAN_VERSION}-slim AS all-browsers

# Install all browser dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    wget \
    gnupg \
    ca-certificates \
    bzip2 \
    xvfb \
    # Chrome deps
    fonts-liberation \
    libasound2 \
    libatk-bridge2.0-0 \
    libatk1.0-0 \
    libatspi2.0-0 \
    libcairo2 \
    libcups2 \
    libdbus-1-3 \
    libdrm2 \
    libexpat1 \
    libgbm1 \
    libglib2.0-0 \
    libgtk-3-0 \
    libnspr4 \
    libnss3 \
    libpango-1.0-0 \
    libx11-6 \
    libxcb1 \
    libxcomposite1 \
    libxdamage1 \
    libxext6 \
    libxfixes3 \
    libxkbcommon0 \
    libxrandr2 \
    xdg-utils \
    # Firefox deps
    libdbus-glib-1-2 \
    libxt6 \
    libpci3 \
    libx11-xcb1 \
    # WebKit deps
    libwpe-1.0-1 \
    libwpebackend-fdo-1.0-1 \
    libgstreamer1.0-0 \
    libgstreamer-plugins-base1.0-0 \
    libenchant-2-2 \
    libsecret-1-0 \
    libhyphen0 \
    && rm -rf /var/lib/apt/lists/*

# Install Chrome
RUN wget -q -O - https://dl.google.com/linux/linux_signing_key.pub | gpg --dearmor > /usr/share/keyrings/google-chrome.gpg \
    && echo "deb [arch=amd64 signed-by=/usr/share/keyrings/google-chrome.gpg] http://dl.google.com/linux/chrome/deb/ stable main" > /etc/apt/sources.list.d/google-chrome.list \
    && apt-get update \
    && apt-get install -y --no-install-recommends google-chrome-stable \
    && rm -rf /var/lib/apt/lists/*

# Install Firefox
RUN wget -q "https://download.mozilla.org/?product=firefox-esr-latest&os=linux64&lang=en-US" -O /tmp/firefox.tar.bz2 \
    && tar -xjf /tmp/firefox.tar.bz2 -C /opt/ \
    && ln -s /opt/firefox/firefox /usr/local/bin/firefox \
    && rm /tmp/firefox.tar.bz2

# Copy probar CLI
COPY --from=builder /build/target/release/probar /usr/local/bin/

# Create non-root user
RUN useradd -m -s /bin/bash probar

WORKDIR /app
RUN chown -R probar:probar /app

USER probar

# Environment for all browsers
ENV PROBAR_COOP_COEP=true
ENV DISPLAY=:99

# Expose all CDP ports
EXPOSE 9222 9223 9224

# Start Xvfb and wait for tests
ENTRYPOINT ["/bin/bash", "-c", "Xvfb :99 -screen 0 1920x1080x24 & sleep 1 && exec \"$@\"", "--"]
CMD ["probar", "--help"]
